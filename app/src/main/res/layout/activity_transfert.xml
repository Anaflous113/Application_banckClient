<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transfert_bg"
    tools:context=".Transfert">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="348dp"
        android:layout_height="434dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="227dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/futura1"
            android:text="Transfert national"
            android:textColor="@color/green"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="143dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/aller_std"
            android:text="Bénéficiaire"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="140dp"
            android:layout_height="23dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/aller_std"
            android:text="Montant"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="139dp"
            android:layout_height="23dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/aller_std"
            android:text="Motif"
            android:textColor="@color/green"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/Montant1"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/cadre"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="@+id/spinner1"
            app:layout_constraintTop_toBottomOf="@+id/spinner1"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/Motif1"
            android:layout_width="161dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/cadre"
            android:ems="10"

            app:layout_constraintStart_toStartOf="@+id/Montant1"
            app:layout_constraintTop_toBottomOf="@+id/Montant1"
            tools:ignore="SpeakableTextPresentCheck" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/cadre"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/send"
            android:layout_width="122dp"
            android:layout_height="48dp"
            android:layout_marginBottom="104dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/aller_std"
            android:onClick="verifier_otp"
            android:text="Valider"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView100"
        android:layout_width="50dp"
        android:layout_height="28dp"


        android:textColor="@color/green"
        android:textSize="0dp"

        tools:layout_editor_absoluteX="-72dp"
        tools:layout_editor_absoluteY="717dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>